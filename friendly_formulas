from random import randint


def create_sample(populationDF):
    """
    Given a Pandas DataFrame
    Create A Random Sample DataFrame
    
    :param populationDF: Sample DataFrame
    """
    sample_ids = []
    used_i = []

    while len(sample_ids) < 3:
        rando = randint(1, len(populationDF))

        if not rando in used_i:
            used_i.append(rando)
            sample_ids.append(rando-1)
        
    return populationDF.iloc[sample_ids]